@using EGHeals.Models.Enums
<div class="flipper-content">
    <FlipUI InnerClass="flipper-content__flipper" IsFlipped="@IsFlipped">
        <Front>
            <GlassWrapperUI class="flipper-content__icon-wrapper flipper-content__icon-wrapper--inactive">
                @ChildContent
            </GlassWrapperUI>
        </Front>
        <Back>
            <GlassWrapperUI class="@($"flipper-content__icon-wrapper {GetVariantClass()}")">
                @ChildContent
            </GlassWrapperUI>
        </Back>
    </FlipUI>
</div>

@code{

    [Parameter] public bool IsFlipped { get; set; }

    [Parameter] public ApplicationColor ActiveColor { get; set; } = ApplicationColor.PRIMARY;

    [Parameter] public RenderFragment ChildContent { get; set; } = default!;

    private string GetVariantClass() => ActiveColor switch
    {
        ApplicationColor.PRIMARY => "flipper-content__icon-wrapper--active-primary",
        ApplicationColor.SECONDARY => "flipper-content__icon-wrapper--active-secondary",
        ApplicationColor.TERTIARY => "flipper-content__icon-wrapper--active-tertiary",
        _ => "flipper-content__icon-wrapper--active-primary"
    };
}