<div class="loader-container @(IsCentralized ? "centralized" : "")">
    <div class="loading-overlay @(IsOverlayed ? "centralized" : "")"></div>
    <div class="loader @(ColorClass)"></div>
</div>


@code {

    [Parameter] public LoaderColor Color { get; set; } = LoaderColor.PRIMARY;

    [Parameter] public bool IsCentralized { get; set; } = true;

    [Parameter] public bool IsOverlayed { get; set; } = false;

    private string ColorClass => Color switch
    {
        LoaderColor.PRIMARY => "primary-color",
        LoaderColor.SECONDARY => "secondary-color",
        _ => "primary-color"
    };
}