@using EGHeals.Components.UI.Inputs.Base;
@using EGHeals.Components.UI.Inputs.Wrappers
@inherits EGHeals.Components.UI.Inputs.Base.InputBase<string>

<InputWrapperUI FontAwesomeIcon="@FontAwesomeIcon" Id="@Id" Label="@Label" ShowValidationErrors="@ShowValidationErrors" ValidationMessages="@ValidationMessages" IsReadOnly="@IsReadOnly">
    <input id="@Id" type="password" class="default-input @ValidationClass" @bind="BindValue" @oninput="HandleInput" placeholder="@Placeholder" readonly="@IsReadOnly" />
</InputWrapperUI>

@code {

    private void HandleInput(ChangeEventArgs e)
    {
        BindValue = e.Value?.ToString();
    }
}