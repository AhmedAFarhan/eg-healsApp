@using EGHeals.Components.Components.Users.Skeletons
@using EGHeals.Models.Dtos.Roles.Reponses
@using EGHeals.Models.Models.Users

<GridUI Columns="1" Class="@Class" ContainerClass="@ContainerClass" Items="Roles" SkeletonNum="2">
    <SkeletonContent>
        <UserSkeletonComponent />
    </SkeletonContent>
    <CardContent Context="role">
        <RoleListItemComponent Model="role" OnShowPermissions="OnShowPermissions" OnActivationChanged="OnActivationChanged" />
    </CardContent>
</GridUI>

@code {

    [Parameter] public bool IsLoading { get; set; }

    [Parameter] public List<RoleModel> Roles { get; set; } = default!;

    [Parameter] public EventCallback<RoleModel> OnShowPermissions { get; set; }

    [Parameter] public EventCallback OnActivationChanged { get; set; }

    [Parameter] public string? Class { get; set; }

    [Parameter] public string? ContainerClass { get; set; }

}