@using EGHeals.Models.Dtos.Users
<GridUI Columns="1" Class="@Class" ContainerClass="@ContainerClass">
    @if (Roles is null)
    {
        <div>skeleton...</div>
        @* @for (int i = 0; i < 6; i++)
        {
            <UserListItemSkeletonComponent />
        } *@
    }
    else if (!Roles.Any())
    {
        <div>No Items Found!</div>
    }
    else
    {
        @foreach (var user in Roles.ToList())
        {
            <UserRoleListItemComponent />
        }
    } 
</GridUI>
@code {

    [Parameter] public bool IsLoading { get; set; }

    [Parameter] public IEnumerable<UserRoleResponseDto> Roles { get; set; } = default!;

    [Parameter] public string? Class { get; set; }

    [Parameter] public string? ContainerClass { get; set; }

}