@using EGHeals.Components.Components.Shared.Modals.Contexts
@inject ModalPopupService ModalPopupService

@if (isVisible)
{
    <DialogPopupUI OnClick="@(() => ModalPopupService.Close(isSuccess))">
        <div class="modal__header">
            @if (!string.IsNullOrEmpty(title))
            {
                <p class="modal__title">@title</p>
            }
            @if (!string.IsNullOrEmpty(desc))
            {
                <p class="modal__desc">@desc</p>
            }
        </div>
        <div class="modal__body">
            <CascadingValue Value="context">
                @content
            </CascadingValue>
        </div>
        @if (errors is not null)
        {
            <ul class="modal__msg">
                @foreach(var error in errors)
                {
                    <li class="modal__msg--err">@error</li>
                }
            </ul>
        }
        @if (!string.IsNullOrEmpty(successMsg))
        {
            <div class="modal__msg modal__msg--success">@successMsg</div>
        }
        @if (isLoading)
        {
            <BarLoading IsCentralized="true" />
        }
    </DialogPopupUI>
}

@code
{
    private bool isSuccess = false;
    private bool isVisible = false;
    private bool isLoading = false;
    private string? title = string.Empty;
    private string? desc = string.Empty;
    private List<string>? errors = default!;
    private string successMsg = string.Empty;
    private RenderFragment? content;
    private ModalContext context = new();

    protected override void OnInitialized()
    {
        context = new ModalContext
        {
            StartLoading = () => { isLoading = true; StateHasChanged(); },
            StopLoading = () => { isLoading = false; StateHasChanged(); },
            SetError = (errs) => 
            {
                errors = errs;
                // errors = ex switch
                // {
                //     null => null,
                //     { Errors: null } => new List<string> { ex.Message },
                //     _ => ex.Errors
                // };
                StateHasChanged(); 
            },
            SetSuccess = (msg) =>
            {
                isSuccess = true;
                successMsg = msg;
                StateHasChanged();
            },
            Close = ModalPopupService.Close
        };

        ModalPopupService.OnShow += Show;
        ModalPopupService.OnShowDialog += ShowDialog;
        ModalPopupService.OnClose += Close;
    }

    private void Show(RenderFragment modalContent, string? modalTitle = null, string? modalDesc = null)
    {
        title = modalTitle;
        desc = modalDesc;
        content = modalContent;
        isVisible = true;
        StateHasChanged();
    }

    private Task ShowDialog(RenderFragment modalContent, string? modalTitle = null, string? modalDesc = null)
    {
        Show(modalContent, modalTitle, modalDesc);
        return Task.CompletedTask;
    }

    private bool Close()
    {
        if (isLoading) return false;

        isSuccess = false;
        isVisible = false;
        isLoading = false;
        title = null;
        desc = null;
        errors = null;
        successMsg = string.Empty;
        content = null;
        StateHasChanged();

        return true;
    }
}